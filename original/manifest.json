{
    "manifest_version": 2,

    "name": "Review Board Notifier",
    "description": "Notifies review request updates.",
    "version": "1.0",

    "background": {
        "persistent": false,
        "page": "views/background.html"
    },

    "options_page": "views/options.html",
    
    "permissions": [
        "alarms",
        "tabs",
        "*://*/"
    ],
    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "views/popup.html"
    }
}
