{
    "manifest_version": 2,

    "name": "Review Board Notifier",
    "description": "Notifies when some review requests for you are published.",
    "version": "1.0",

    "options_page": "options.html",
    "permissions": [
        "<all_urls>"
    ],
    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    }
}
