{
    "manifest_version": 2,

    "name": "Review Board Notifier",
    "description": "Notifies review request updates.",
    "version": "1.0",

    "options_page": "options.html",
    "permissions": [
        "alarms",
        "tabs",
        "http://*/"
    ],
    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    }
}
